DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require"

# Environment (Required)
# Development: development
# Production: production
ENVIRONMENT=development

# Ingestion controls (optional)
# Enable third-party sources (default off for faster local testing)
ENABLE_PYTRENDS=false
ENABLE_WIKIPEDIA=false

# Limits and time budget
# Max keywords processed and overall fetch time budget (seconds)
MAX_KEYWORDS=50
TIME_BUDGET_SECONDS=25

# Notes:
# - Use your Supabase Postgres connection string (Project Settings → Database → Connection string → URI)
# - Prefer the pooled connection string for serverless/cron use, ensure sslmode=require

